{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Hojaservicio list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombreempleado</th>
                <th>Dui</th>
                <th>Lugardui</th>
                <th>Lugarnac</th>
                <th>Fechanac</th>
                <th>Estadocivil</th>
                <th>Direccion</th>
                <th>Educacion</th>
                <th>Fechaingreso</th>
                <th>Cargo</th>
                <th>Sueldoinicial</th>
                <th>Isss</th>
                <th>Nit</th>
                <th>Destacadoen</th>
                <th>Informacionadicional</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hojaservicio_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreempleado }}</td>
                <td>{{ entity.dui }}</td>
                <td>{{ entity.lugardui }}</td>
                <td>{{ entity.lugarnac }}</td>
                <td>{% if entity.fechanac %}{{ entity.fechanac|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.estadocivil }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.educacion }}</td>
                <td>{% if entity.fechaingreso %}{{ entity.fechaingreso|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.cargo }}</td>
                <td>{{ entity.sueldoinicial }}</td>
                <td>{{ entity.isss }}</td>
                <td>{{ entity.nit }}</td>
                <td>{{ entity.destacadoen }}</td>
                <td>{{ entity.informacionadicional }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('hojaservicio_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('hojaservicio_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('hojaservicio_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
