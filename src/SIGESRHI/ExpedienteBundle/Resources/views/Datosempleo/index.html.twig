{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Datosempleo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombreempresa</th>
                <th>Direccionempresa</th>
                <th>Telefonoempresa</th>
                <th>Fechainiciolaboral</th>
                <th>Fechafinlaboral</th>
                <th>Jefeinmediato</th>
                <th>Cargodesempenado</th>
                <th>Sueldo</th>
                <th>Motivoretiro</th>
                <th>Tipodatoempleo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('datosempleo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombreempresa }}</td>
                <td>{{ entity.direccionempresa }}</td>
                <td>{{ entity.telefonoempresa }}</td>
                <td>{% if entity.fechainiciolaboral %}{{ entity.fechainiciolaboral|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.fechafinlaboral %}{{ entity.fechafinlaboral|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.jefeinmediato }}</td>
                <td>{{ entity.cargodesempenado }}</td>
                <td>{{ entity.sueldo }}</td>
                <td>{{ entity.motivoretiro }}</td>
                <td>{{ entity.tipodatoempleo }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('datosempleo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('datosempleo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('datosempleo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
