{% extends '::PrincipalBase.html.twig' %}

{% block principal -%}
    <!-- Botón ayuda -->
    <a href="#help" class="btn pull-right tool" data-toggle="modal" title="Click para ayuda"><i class="icon-question-sign"></i></a>
    {{ include('ExpedienteBundle:Ayuda/Docpersonal:registro.html.twig')}}

    {% for flashMessage in app.session.flashbag.get('new') %}
        <div class="alert alert-success">
            <p> {{ flashMessage }} </p>
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('errornew') %}
        <div class="alert alert-danger">
            <p> {{ flashMessage }} </p>
        </div>
    {% endfor %}

    <h4 class='text-center'>RECORD DEL EXPEDIENTE PERSONAL</h4>
    {% for exp in expediente %}
    <p>Nombre: <b>{{exp.nombres}}</b><p><br/>
    <form action="{{ path('docpersonal_create',{'exp':exp.id}) }}" id= "docpersonal_form" method="post" {{ form_enctype(form) }}>
    {% endfor %}
        {#{ form_widget(form) }#}
        <fieldset><legend>Agregar Documento Personal</legend>
              <table width='80%'>
                <tr>
                    <td class="text-center">{{ form_row(form.nombredocpersonal) }}</td>
                    <td class="text-center">{{ form_row(form.indice) }}</td>
                </tr>
            </table>            
          </fieldset>
        {{ form_rest(form) }}
        <div class='text-center'>
            <button type="submit" class="btn btn-primary">Agregar</button>
            <a  href="{{ 
                    path('docpersonal_empleado'                        
                        )
                    }}" class="btn">Cancelar</a>
        <div>
    </form>
    <br/>
    <fieldset><legend>Documentos Registrados</legend>
    <div class='centered'>
    {% if documentos|length > 0 %}
        <table class='table table-bordered table-hover' border='1' width='100%' align='center'>
            <tr>
                <th>Nombre del documento</th>
                <th width='150px'>N° Correlativo</th>
                <th>Entregado</th>
                <th>Eliminar</th>
            </tr>
    
        {% for doc in documentos%}
            <tr>
                <td>{{ doc.nombredocpersonal }}</td>
                <td>{{ doc.indice }}</td>
                <td>{% if doc.entregado == 1 %}</td>
            </tr>
        {% endfor %}
    {% else %}
    No existen registros
    {% endif %}
        </table>
    </div>
    </fieldset>
{% endblock %}
