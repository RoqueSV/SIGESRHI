{% extends '::PrincipalBase.html.twig' %}

{% block principal -%}
    
    {% for flashMessage in app.session.flashbag.get('new') %}
    <div class="alert alert-success">
        <p> {{ flashMessage }} </p>
    </div>
    {% endfor %}

    <h3 class="text-center">Acci&oacute;n de Personal</h3>

    <table class="table table-bordered table-hover mitable">
        <tbody>
            <tr>
                <th width="25%">Tipo de Acci&oacute;n: </th>
                <td>{{ entity.idtipoaccion.nombretipoaccion }}</td>
            </tr>
            <tr>
                <th>Fecha de registro: </th>
                <td>{{ entity.fecharegistroaccion|date('d-m-Y')|fecha }}</td>
            </tr>
            <tr>
                <th>Descripci&oacute;n: </th>
                <td>{{ entity.motivoaccion }}</td>
            </tr>
            <tr>
                <th># de acuerdo: </th>
                <td>
                    {% if vista_retorno == 3 or vista_retorno == 4 %}
                    N/A
                    {% else %}
                    {{ entity.numacuerdo }}
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <div class="text-center">
        {% if vista_retorno == 1 %}
        <a  class="btn" href="{{ path('accionpersonal_cacuerdos', {'id':entity.idexpediente.id, 'vista_retorno':vista_retorno}) }}"> Ir a Hoja de servicio </a>
        {% elseif vista_retorno == 2 %}
        <a  class="btn" href="{{ path('accionpersonal_cacuerdos', {'id':entity.idexpediente.id, 'vista_retorno':vista_retorno}) }}"> Ir a Hoja de servicio </a>
        {% elseif vista_retorno == 3 %}
        <a  class="btn" href="{{ path('accionpersonal_cotrosacuerdos', {'id':entity.idexpediente.id, 'vista_retorno':vista_retorno}) }}"> Ir a Otras Acciones </a>
        {% elseif vista_retorno == 4 %}
        <a  class="btn" href="{{ path('accionpersonal_cotrosacuerdos', {'id':entity.idexpediente.id, 'vista_retorno':vista_retorno}) }}"> Ir a Otras Acciones </a>
        {% elseif vista_retorno == 5 %}
        <a  class="btn" href="{{ path('accionpersonal_cacuerdos', {'id':entity.idexpediente.id, 'vista_retorno':vista_retorno}) }}"> Ir a Otras Acciones </a>
        {% elseif vista_retorno == 6 %}
        <a  class="btn" href="{{ path('accionpersonal_cotrosacuerdos', {'id':entity.idexpediente.id, 'vista_retorno':vista_retorno}) }}"> Ir a Otras Acciones </a>
        {% endif %}
    </div>

