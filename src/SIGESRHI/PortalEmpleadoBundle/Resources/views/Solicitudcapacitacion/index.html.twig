        <p> {{ flashMessage }} </p>
    </div>
{% endfor %}
<br>
    <h4 class='text-center'>SOLICITUDES REGISTRADAS</h4>
    <p class="text-center">Seleccione para ver detalle</p>

{{ grid_search(grid) }}

