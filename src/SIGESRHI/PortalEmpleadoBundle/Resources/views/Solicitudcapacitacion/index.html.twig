#grid_grid_solicitudesEmpleado__fechasolicitud__query__from{
    width: 100px; 
}
</style>
<script>
$(document).ready(function(){

         $("#grid_grid_solicitudesEmpleado__fechasolicitud__query__from").datepicker({ 
              dateFormat: 'yy-mm-dd',  
