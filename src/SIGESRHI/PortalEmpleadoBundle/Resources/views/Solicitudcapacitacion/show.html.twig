{% extends '::PrincipalBase.html.twig' %}

{% block principal -%}
    <h3 class="text-center">Solicitud para participación de Capacitación</h3>

    <table class="table mitable" width="100%" align="center">
            <tr>
                <th>Fecha Solicitud</th>
                <td>{{ entity.fechasolicitud|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Aprobacionsolicitud</th>
                <td>{{ entity.aprobacionsolicitud }}</td>
            </tr>
            <tr>
                <th>Motivosolicitud</th>
                <td>{{ entity.motivosolicitud }}</td>
            </tr>
            <tr>
                <th>Comentariosolicitud</th>
                <td>{{ entity.comentariosolicitud }}</td>
            </tr>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('solicitudcapacitacion') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('solicitudcapacitacion_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('solicitudcapacitacion_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
