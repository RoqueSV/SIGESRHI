     <div class="text-center">
    {% if entity.idcapacitacion|length > 0 %}
     <a href="{{path('reporte_plan_capacitacion',{'anio':entity.anoplan,'id':entity.id})}}" class="btn btn-primary"> Generar PDF </a>
     {% endif %}
