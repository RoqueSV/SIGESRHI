{% extends '::PrincipalBase.html.twig' %}

{% block principal -%}
<a href="#help" class="btn pull-right tool" data-toggle="modal" title="Click para ayuda"><i class="icon-question-sign"></i></a>
{{ include('EvaluacionBundle:Ayuda/Formulario:EditarGeneral.html.twig')}}

{% for flashMessage in app.session.flashbag.get('new') %}
    <div class="alert alert-success">
        <p> {{ flashMessage }} </p>
    </div>
{% endfor %}

    <h3 class="text-center">Editar datos generales de formulario de evaluaci&oacute;n</h3>

    <form action="{{ path('formularioevaluacion_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
            
            <table class="table table-bordered mitable form-inline">
                <tr>
                    <th>{{form_label(edit_form.tipoformulario)}}</th><td>{{form_widget(edit_form.tipoformulario)}} {{form_errors(edit_form.tipoformulario)}}</td>
                </tr>
                <tr>
                    <th>{{form_label(edit_form.codigoformulario)}}</th><td>{{form_widget(edit_form.codigoformulario)}} {{form_errors(edit_form.codigoformulario)}}</td>
                </tr>
                <tr>
                    <th>{{form_label(edit_form.nombrebreve)}}</th><td>{{form_widget(edit_form.nombrebreve)}} {{form_errors(edit_form.nombrebreve)}}</td>
                </tr>
            </table>

            <table class="table table-bordered">
            <tr>
                <th>{{form_label(edit_form.Puntajes)}}</th>
            </tr>
            <tr>
                <td>{{form_widget(edit_form.Puntajes)}} {{form_errors(edit_form.Puntajes)}}</td>
            </tr>
        </table>

        {{ form_rest(edit_form) }}

        <div class="text-center">
            <button type="submit" class="btn">Modificar</button>
            <a href="{{ path('formularioevaluacion_show', {'id':entity.id}) }}" class="btn" >Cancelar</a>    
        </div>
    </form>
 
{% endblock %}
