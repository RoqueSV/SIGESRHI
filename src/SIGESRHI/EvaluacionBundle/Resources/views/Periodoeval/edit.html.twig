{% extends '::PrincipalBase.html.twig' %}

{% block principal -%}

<a href="#help" class="btn pull-right tool" data-toggle="modal" title="Click para ayuda"><i class="icon-question-sign"></i></a>

{{ include('EvaluacionBundle:Ayuda/PeriodoEval:Modificar.html.twig')}}

{% for flashMessage in app.session.flashbag.get('edit_error') %}
    <div class="alert alert-danger">
        <p> {{ flashMessage }} </p>
    </div>
{% endfor %}

<div class="text-center">
    <h4>MODIFICAR PERIODO DE EVALUACI&Oacute;N</h4>

</div>
    <form action="{{ path('periodoeval_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
    
        <table class="table table-bordered table-hover tablachica mitable centered-table">
            <tr>
                <th width="50%"> <p class="text-center">A&ntilde;o: </p></th><th><p class="text-center">Semestre : </p></th>
            </tr>
            <tr>
                <td><div class="text-center">{{entity.anio}} </div></td>
                <td><div class="text-center">{{entity.semestre}}</div></td>
            </tr>
        </table>
        <br>

        <table class="table table-bordered mitable tablachica centered-table form-inline">
            <tr>
                <th width="50%">{{form_label(edit_form.fechainicio)}}</th><td><div class="text-center">{{form_widget(edit_form.fechainicio)}} {{form_errors(edit_form.fechainicio)}}</div></td>
            </tr>
            <tr>
                <th>{{form_label(edit_form.fechafin)}}</th><td><div class="text-center">{{form_widget(edit_form.fechafin)}} {{form_errors(edit_form.fechafin)}}</div></td>
            </tr>
        </table>
<br><br>
        
        <div class="hide">
            {{form_rest(edit_form)}}
        </div>

        <div class="text-center">
            <button type="submit" class="btn">Modificar</button>
            <button type="button" class="btn" onclick="location.href='{{path('periodoeval_show',{'id':entity.id})}}'">Cancelar</button>

        </div>
    </form>

{% endblock %}
