{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Incidente list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fechaincidente</th>
                <th>Tipoincidente</th>
                <th>Descripcionincidente</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('incidente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.fechaincidente %}{{ entity.fechaincidente|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.tipoincidente }}</td>
                <td>{{ entity.descripcionincidente }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('incidente_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('incidente_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('incidente_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
