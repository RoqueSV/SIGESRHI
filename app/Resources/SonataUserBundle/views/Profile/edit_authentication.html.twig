{% extends '::PrincipalBase.html.twig' %}
{% block principal -%}

{% for flashMessage in app.session.flashbag.get('fos_user_success') %}
  <div class="alert alert-sucess">
    <p>{{ flashMessage }}</p>
  </div>
{% endfor %}

<div class="sonata-user-edit-authentication">

     <h3 class="text-center">Edición de datos de autenticación</h3><br/>

    <form action="{{ path('sonata_user_profile_edit_authentication') }}" method="POST" class="form-horizontal">

    	<fieldset>
    		<legend>Datos solicitados</legend>
        {{ form_rest(form) }}
        </fieldset>

      <div class="text-center">
        <input type="submit" name="submit" value="Guardar" class="btn btn-primary" />
      </div>
    </form>

</div>

{% endblock %}